<h1>加成A</h1>

<%= form_for @plusa , :url => updateplusratea_yfcase_objectbuild_path( @yfcase,@plusa), method: :patch do |f| %>
<div class="form-group">
    <%= f.number_field :plusa, in: 0..10, :step => 0.01,:value => 1.00, :required => true , :class => "form-control" %>
    <p style="color:red;margin:0px;">※ 請依屋況給予加成分數(0.50~1.50)</p>
    <p style="color:red;margin:0px;">※ 預設值為1.00</p>
    <%= f.hidden_field :surveyora, :value => "#{current_user.first_name}#{current_user.last_name}" %>
</div>

<div class="form-group">
    <%= f.submit :class => "btn btn-primary" %>
</div>
<% end %>
<%= link_to "返回", yfcase_path(@yfcase) %>
