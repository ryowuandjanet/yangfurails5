<p id="notice">
    <%= notice %>
</p>
<h1>YF評量表</h1>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>操作</th>
            <th>案號</th>
            <th>地址</th>
            <th>項目</th>
        </tr>
    </thead>
    <tbody>
        <% @yfcases.each do |yfcase| %>
        <tr>
            <td>
                <% if yfcase.editable_by?(current_user) %>
                    <%= link_to yfcase, method: :delete, data: { confirm: '你(妳)確定要刪除嗎?' } do %>
                        <%= fa_icon "window-close",class: "fa-2x" %>
                    <% end %>
                <% end %>
            </td>
            <td>
                <%= link_to yfcase_path(yfcase) do %>
                <%= yfcase.case_number %>
                <% end %>
            </td>
            <td>
                <%= yfcase.township.try(:zip_code) %> <%= yfcase.country.try(:name) %><%= yfcase.township.try(:name) %><%= yfcase.other_address %></td>
            <td>
                (修改，暫不開放)
            </td>
           
        </tr>
        <% end %>
    </tbody>
    
   
</table>
<br>